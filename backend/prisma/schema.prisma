generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CardDeck{
  id Int @id @default(autoincrement())
  title String
  description String
  cards Card[]
}

model Card{
  id Int @id @default(autoincrement())
  question String
  answer String
  isMastered Boolean
  deck CardDeck @relation(fields: [deckId], references: [id], onDelete: Cascade)
  deckId Int
}